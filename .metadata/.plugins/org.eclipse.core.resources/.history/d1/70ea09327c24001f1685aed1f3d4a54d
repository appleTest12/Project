#spring.application.name=noticeBoard
#http port
server.port=88

#db connection(Oracle)
spring.datasource.driver-class-name=oracle.jdbc.OracleDriver
spring.datasource.url=jdbc:oracle:thin:@localhost:1522/oracle
spring.datasource.username=tiger
spring.datasource.password=tiger

# mapper.xml 위치 지정
mybatis.mapper-locations=classpath:mapper/**/*.xml

# mapper.xml
# xml 파일의 parameter type, result type에 패키지명 생략 가능하도록 alias 설정
mybatis.type-aliases-package=com.notice.noticeBoard.*, com.notice.noticeBoard.common.data

#thymeleaf auto refresh
spring.thymeleaf.cache=false
