    <h2>게시글 상세 화면</h2>
    <form id="frm" method="post">
      <table class="notice_list">
        <colgroup>
          <col width="25%">
          <col width="35%">
          <col width="25%">
          <col width="35%">
        </colgroup>
        <caption>게시글 상세 내용</caption>
        <tbody>
          <tr>
            <th scope="row">글 번호</th>
            <td th:text="${notice.noticeId}"></td>
            <th scope="row">조회수</th>
            <td th:text="${notice.hitCnt}"></td>
          </tr>
          <tr>
            <th scope="row">작성자</th>
            <td th:text="${notice.writer}"></td>
            <th scope="row">작성일</th>
            <td th:text="${notice.regDate}"></td>
          </tr>
          <tr>
            <th scope="row">제목</th>
            <td colspan="3"><input type="text" id="title" name="title" th:text="${notice.title}" /></td>
          </tr>
          <tr>
            <td colspan="4" class="view_text">
              <textarea title="내용" id="content" name="content" th:text="${notice.content}"></textarea>
            </td>
          </tr>
        </tbody>
